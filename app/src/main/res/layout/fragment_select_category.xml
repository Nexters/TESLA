<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_contents_left"
                app:layout_constraintGuide_begin="@dimen/contentsPaddingLeft"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_contents_right"
                app:layout_constraintGuide_end="@dimen/contentsPaddingRight"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_title"
                android:text="XX님,\n가입이 완료되었습니다."
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:lineSpacingExtra="8dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/gl_contents_left"
                app:layout_constraintRight_toRightOf="@id/gl_contents_right"
                app:layout_constraintBottom_toTopOf="@id/tv_sub_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_sub_title"
                android:text="관심 카테고리를 선택하여\n같은 관심사를 갖은 유저들을 추천 받아 보세요.\n최소 3개의 카테고리를 선택해주세요."
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:lineSpacingExtra="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintLeft_toLeftOf="@id/gl_contents_left"
                app:layout_constraintRight_toRightOf="@id/gl_contents_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        <Button
                android:id="@+id/btn_next"
                android:text="다음"
                app:layout_constraintLeft_toLeftOf="@id/gl_contents_left"
                app:layout_constraintRight_toRightOf="@id/gl_contents_right"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/contentsPaddingBottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>