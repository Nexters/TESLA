<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_question"
                android:text="Q 나에게 가장 수치스러운 비밀은?"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_contents"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_contents"
                android:text="나는 무좀이 있다."
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/iv_thumbnail"
                android:background="@drawable/bg_feed_contents"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="100dp" />

        <ImageView
                android:id="@+id/iv_thumbnail"
                android:background="@drawable/shape_thumbnail"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tv_user_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contents"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="0dp" />

        <TextView
                android:id="@+id/tv_user_name"
                android:text="오졌다리 오징어다리"
                android:layout_marginLeft="10dp"
                android:textColor="#818181"
                android:textSize="14dp"
                app:layout_constraintTop_toTopOf="@+id/iv_thumbnail"
                app:layout_constraintBottom_toBottomOf="@+id/iv_thumbnail"
                app:layout_constraintLeft_toRightOf="@+id/iv_thumbnail"
                app:layout_constraintRight_toLeftOf="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_price"
                android:text="234view . 2망치"
                android:textColor="#818181"
                android:textSize="14dp"
                app:layout_constraintTop_toTopOf="@+id/iv_thumbnail"
                app:layout_constraintBottom_toBottomOf="@+id/iv_thumbnail"
                app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>