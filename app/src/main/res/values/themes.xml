<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.CookiePang" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">#336FFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_10_bg1</item>

        <item name="android:windowBackground">@drawable/bg_gradient_basic_black</item>

        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarStyle.Dark</item>
        <item name="android:textViewStyle">@style/Base.TextViewFontStyle</item>
        <item name="android:buttonStyle">@style/Base.ButtonFontStyle</item>
        <item name="android:editTextStyle">@style/Base.EditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/Base.RadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/Base.CheckboxFontStyle</item>

    </style>

</resources>