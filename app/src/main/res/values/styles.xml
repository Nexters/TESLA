<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.TextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/font_pretendard</item>
        <item name="android:letterSpacing">0.002</item>
        <item name="android:lineSpacingMultiplier">1.60</item>
    </style>

    <style name="Base.ButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="fontFamily">@font/font_pretendard</item>
    </style>

    <style name="Base.EditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="fontFamily">@font/font_pretendard</item>
    </style>

    <style name="Base.RadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="fontFamily">@font/font_pretendard</item>
    </style>

    <style name="Base.CheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="fontFamily">@font/font_pretendard</item>
    </style>

    <style name="titleMenuTextViewStyle" parent="Base.TextViewFontStyle">
        <item name="android:textSize">15dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- toolbar style  -->
    <style name="ToolbarStyle.Dark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="titleTextAppearance">@style/cpToolbarTitleTextStyle</item>
    </style>

    <!--  toolbar title style  -->
    <style name="cpToolbarTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/font_pretendard</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  toolbar sub title style  -->
    <style name="cpToolbarSubTitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="fontFamily">@font/font_pretendard</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14dp</item>
    </style>


